# 编辑器配置文件


# 是否是顶级配置文件 为true的话编辑器将按照此文件规则进行
root = true

# 表示所有文件通用
[*]
# 编码格式
charset = utf-8
# 缩进风格
indent_style = space
# 缩进大小
indent_size = 2
# 换行符类型
end_of_line = lf
# 是否始终在文件末尾插入一行空行
insert_final_newline = true
# 是否删除行尾空格
trim_trailing_whitespace = true
# 运算符两遍都有空格
spaces_around_operators = true

# 表示仅 md 文件适用以下规则
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false

